  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      // "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "runtimeArgs": ["-r", "ts-node/register"],
      "program": "${workspaceFolder}\\${file}", // to run current file
      "outFiles": ["${workspaceFolder}/**/*.ts"]

      // "preLaunchTask": "tsc: build - tsconfig.json"
    }
  ]
}
